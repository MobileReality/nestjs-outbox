{
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "outDir": "./dist",
        "rootDirs": ["./", "./lib", "./test"],
        "baseUrl": ".",
        "paths": {
        }
    },
    "include": ["lib/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist/",
        "test/"
    ]
}
